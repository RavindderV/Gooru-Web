<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:header="urn:import:org.ednovo.gooru.client.mvp.play.collection.header">
	<ui:style field= "playerStyle" src="collectionshare.css"/>
	<g:FlowPanel styleName="{playerStyle.collection-narration-container}">
		<g:FlowPanel styleName="{playerStyle.collection-narration-wrapper}">
			<g:HTMLPanel styleName="{playerStyle.collection-share-maintitle}">Share this with others by copying and pasting these links.</g:HTMLPanel>
			<g:HTMLPanel styleName="{playerStyle.collection-share-buttonscontainer}">
				<g:InlineLabel styleName="{playerStyle.collection-share-button1}" ui:field="bitlyLink">Switch to Bit.ly</g:InlineLabel>
				<g:InlineLabel styleName="{playerStyle.collection-share-button2}" ui:field="embedLink">Switch to embed code</g:InlineLabel>	
			</g:HTMLPanel>
			<g:FlowPanel styleName="{playerStyle.collection-share-wrapper}">
				<g:FlowPanel styleName="{playerStyle.collection-share-titleContainer}">
					<g:Label styleName="{playerStyle.collection-share-title}" ui:field="resourceTitleText"></g:Label>
					<g:TextArea styleName="{playerStyle.collection-share-textbox}" ui:field="resourceShareTextArea"></g:TextArea>
				</g:FlowPanel>
				<g:FlowPanel styleName="{playerStyle.collection-share-separator}"></g:FlowPanel>
				<g:FlowPanel ui:field="socialSharePanel">
					<g:Label styleName="{playerStyle.collection-socialshare-title}">Or Share this link via</g:Label>
					<g:HTMLPanel styleName="{playerStyle.collection-share-titleContainer}" ui:field="sharePanel"></g:HTMLPanel>
				</g:FlowPanel>
				<g:FlowPanel styleName="{playerStyle.collection-share-titleContainer}" ui:field="collectionShareContainer">
					<g:Label styleName="{playerStyle.collection-share-title}">Collection</g:Label>
					<g:TextArea styleName="{playerStyle.collection-share-textbox}" ui:field="collectionShareTextArea"></g:TextArea>
				</g:FlowPanel>
			</g:FlowPanel>
			
		</g:FlowPanel> 
	</g:FlowPanel>
</ui:UiBinder>