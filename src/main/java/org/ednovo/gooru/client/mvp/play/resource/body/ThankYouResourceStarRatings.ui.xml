<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:htmlevents="urn:import:org.ednovo.gooru.client.ui">
	<ui:style field="playerStyle" src="resourceplayermetadata.css" type="org.ednovo.gooru.client.mvp.play.resource.body.ResourcePlayerMetadataBundle"/>

	<g:HTMLPanel>
	    <g:HTMLPanel styleName="{playerStyle.ratingConfirmationContainer}">
        	<g:HTMLPanel styleName="{playerStyle.arrowBorder}"></g:HTMLPanel>
            <g:HTMLPanel styleName="{playerStyle.arrow}"></g:HTMLPanel>
                <h1>Thank you for rating!</h1>
                  <g:HTMLPanel styleName="{playerStyle.rating}">
                        Average Rating<br/>
                    <!--  <span styleName="{playerStyle.star} {playerStyle.filled}"></span>
                   <span styleName="{playerStyle.star} {playerStyle.filled}"></span>
                   <span styleName="{playerStyle.star} {playerStyle.filled}"></span>
                   <span styleName="{playerStyle.star} {playerStyle.filled}"></span>
                   <span styleName="{playerStyle.star}"></span> -->
                   <g:HTMLPanel styleName="{playerStyle.rating}">
                	<g:Label styleName="{playerStyle.rating}" ui:field="starValue"></g:Label>
                    <g:SimpleCheckBox ui:field="ThankyouStarOne"  name="rating" styleName="{playerStyle.rating}"/>
                    <g:SimpleCheckBox ui:field="ThankyouStarTwo"  name="rating" styleName="{playerStyle.rating}"/>
                    <g:SimpleCheckBox ui:field="ThankyouStarThree"  name="rating" styleName="{playerStyle.rating}"/>
                    <g:SimpleCheckBox ui:field="ThankyouStarFour"  name="rating" styleName="{playerStyle.rating}"/>
                    <g:SimpleCheckBox ui:field="ThankyouStarFive"  name="rating" styleName="{playerStyle.rating}"/>
                     <g:Label ui:field="totalStars">(5)</g:Label>
                     <!-- (<a href="#">5</a>) -->
                  </g:HTMLPanel>
                    </g:HTMLPanel>
                    <g:Label>Tell us what you think!</g:Label>
                    <g:TextArea ui:field="ratingCommentTxtArea"></g:TextArea>
                    <g:HTMLPanel styleName="{playerStyle.saveCancelContainer}">
                        <g:Button ui:field="btnSkip" styleName="secondary">Skip</g:Button>
                        <g:Button ui:field="btnPost" styleName="primary">Post</g:Button>
                    </g:HTMLPanel>
                </g:HTMLPanel>
	    
	    
	</g:HTMLPanel>
	
</ui:UiBinder>