<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
xmlns:gg="urn:import:org.ednovo.gooru.client.uc">
<ui:with type="org.ednovo.gooru.client.mvp.home.HomeCBundle" field="res" />
    <g:HTMLPanel>
        <div class="{res.css.loginTop}">
            Log in!
        </div>
        <div aligh="left" class="{res.css.loginBorderPanel}" ui:field="loginBorderPanel">
            <div class="{res.css.loginGooruLogoContainer}">
                <div class="{res.css.loginGooruLabel}"></div>
                <div class="{res.css.loginGooruLabelSubText}">beta</div>
            </div>
            <g:Label text="Please log in to create and save your favorite resources!" styleName="{res.css.loginBlackText}" />
            <div align="left" class="{res.css.textBoxesField}">
                <gg:TextBoxWithPlaceholder ui:field="loginTxtBox" placeholder="Email or Username"/>
                <gg:TextBoxWithPlaceholder ui:field="passwordTxtBox" placeholder="Password" password="true"/>
                <g:Label text="Forgot password?" styleName="{res.css.loginHyplink}" ui:field="forgotPwd"/>
                <div align="center" class="{res.css.loginCkbox}">
                    <g:CheckBox text="Keep me logged in"></g:CheckBox>
                </div>
            </div>
            <div class="{res.css.loginCancelButton}">        
                <g:Button ui:field="loginButton" text="Log In" styleName="{res.css.loginBtn}" />                
                <g:Anchor  ui:field="cancelButton"  text="Cancel" styleName="{res.css.cancelBtn}" />
            </div>
            <div class="{res.css.register}">
                <g:Label text="Don't have an account?" styleName="{res.css.registerLinkQ}" />
                <g:Label text="Register here!" styleName="{res.css.registerLink}" ui:field="registerHereLbl"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 