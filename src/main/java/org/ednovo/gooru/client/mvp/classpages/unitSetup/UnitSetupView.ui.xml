<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:header="urn:import:org.ednovo.gooru.client.mvp.play.collection.header"
	xmlns:uc="urn:import:org.ednovo.gooru.client.uc"  xmlns:ptag= "urn:import:org.ednovo.gooru.client.uc">
	<ui:style field="style" src="unitsetup.css" />
	<g:HTMLPanel styleName="{style.unitDetails}">
	    <g:HTMLPanel styleName="{style.containerTeacher}">
			<g:HTMLPanel styleName="col-xs-12 {style.gerybg} {style.UnitSetupMain}">
				<g:HTMLPanel styleName="col-xs-4">
					<ptag:PPanel styleName="{style.uniSetup}">
							<g:Image styleName="{style.setMarginArrow}" url="images/blueArrow.png"></g:Image>
							<g:Anchor styleName="{style.classSetupLbl}" ui:field="classSetupAnchor">Class Setup</g:Anchor>
					</ptag:PPanel>
				</g:HTMLPanel>

				<g:HTMLPanel styleName="col-xs-4">
					<g:Label styleName="{style.textHeading}">Unit Setup</g:Label>
					<ptag:PPanel styleName="{style.textSubHeading}" ui:field="subHeading"></ptag:PPanel>
		
					<ptag:PPanel>
						<g:HTMLPanel styleName="col-xs-6 {style.uniRequired} {style.textCenter}">
							<g:HTMLPanel styleName="{style.bubble}"></g:HTMLPanel>
							Required
						</g:HTMLPanel>
						<g:HTMLPanel styleName="col-xs-6 {style.uniRequired} {style.textCenter}">
							<g:HTMLPanel styleName="{style.bubbleStyle}"></g:HTMLPanel>
							Optional
						</g:HTMLPanel>
					</ptag:PPanel>
				</g:HTMLPanel>

			<g:HTMLPanel styleName="col-xs-4 text-right">
				<ptag:PPanel styleName="{style.uniSetup}">
				    	<g:Anchor styleName="{style.unitdetailsLbl}" ui:field="unitDetailsAnchor">Unit Details</g:Anchor> 
						<g:Image styleName="{style.setMarginArrowclass}" url="images/blueRightArrow.png"></g:Image>
				</ptag:PPanel>
			</g:HTMLPanel>
		</g:HTMLPanel>
		<g:HTMLPanel styleName="clearfix" ui:field="clearfix"></g:HTMLPanel>
		<g:HTMLPanel styleName="{style.loadingImageMainDiv}" ui:field="loadingImageLabel">
			<g:Label styleName="{style.loadingImagePathWay}" />
		</g:HTMLPanel>
		<g:VerticalPanel styleName="col-xs-12 {style.setupMain}" ui:field="unitAssignmentWidgetContainer"></g:VerticalPanel>
		<g:HTMLPanel styleName="clearfix"></g:HTMLPanel>
		<g:HTMLPanel styleName="{style.paginationStyle}">
			<ptag:HTMLEventPanel ui:field="paginationPanel" styleName="text-right" ></ptag:HTMLEventPanel></g:HTMLPanel>
	   </g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>