<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:gg="urn:import:org.ednovo.gooru.client.uc" >
	<ui:with type="org.ednovo.gooru.client.mvp.home.register.RegisterCBundle" field="res" />
	<g:FlowPanel styleName="{res.css.shelfItemContentDiv}" height="200px">
		<g:Label styleName="{res.css.registerMessageDiv}" text="Thanks! You’re almost there..."/>
		<g:Label styleName="{res.css.registerSuccessMessage}" text="We sent you a confirmation email with instructions on how to complete your Gooru registration. Please check your email account."/>
		<g:FlowPanel styleName="{res.css.registerContactMessage}">
			<g:Label text="Didn’t receive a confirmation email?"/>
			<g:Label styleName="{res.css.contactUsText}" text="Please contact us at"/>
			<g:Label styleName="{res.css.supportTextMsg}" text="&nbsp; support@goorulearning.org"/>
		</g:FlowPanel>
		<g:FlowPanel styleName="{res.css.registerFormButtonDiv}">
			<gg:BlueButtonUc  text="Ok" ui:field="confirmRegisterUc" />
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 