<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style field="style" src="ratingandreview.css"/>
	<g:HTMLPanel styleName="{style.popup} userInput">
            <div class="{style.popupInner}">
                <div class="{style.popupHeader}">
                    <g:Label ui:field="lblResourceTitle"></g:Label>
                    <g:Label styleName="{style.closeButton}" ui:field="closeButton"></g:Label>
                </div>
                <div class="{style.popupContent}">
                    <div class="{style.ratingVisualizations}">
                        <div class="{style.distribution} {style.barGraph}">
                            <h3>Rating Distribution</h3>
                                <div class="{style.label}">Excellent</div>
                                <div id="data-one" class="{style.bar}" style="width: 60%"></div> <g:Label ui:field="excellentScore" styleName="{style.count}"></g:Label>
                                <br/>
                                <div class="{style.label}">Very Good</div>
                                <div id="data-two" class="{style.bar}" style="width: 100%"></div> <g:Label ui:field="verygoodScore" styleName="{style.count}"></g:Label>
                                <br/>
                                <div class="{style.label}">Good</div>
                                <div id="data-three" class="{style.bar}" style="width: 60%"></div> <g:Label ui:field="goodScore" styleName="{style.count}"></g:Label>
                                <br/>
                                <div class="{style.label}">Fair</div>
                                <div id="data-four" class="{style.bar}" style="width: 30%"></div> <g:Label ui:field="fairScore" styleName="{style.count}"></g:Label>
                                <br/>
                                <div class="{style.label}">Poor</div>
                                <div id="data-four" class="{style.bar}" style="width: 20%"></div> <g:Label ui:field="poorScore" styleName="{style.count}"></g:Label>
                                <br/>
                        </div>
                        <h3> Average Rating</h3>
                         <g:FlowPanel ui:field="ratingWidgetPanel"></g:FlowPanel>
                        <!-- <div class="{style.average}">
                            <h3>Average Rating</h3>
                            <div class="{style.rating}">
                                   <g:InlineLabel styleName="{style.star}" ui:field="oneStar"></g:InlineLabel>
                               <g:InlineLabel styleName="{style.star}" ui:field="twoStar"></g:InlineLabel>
                               <g:InlineLabel styleName="{style.star}" ui:field="threeStar"></g:InlineLabel>
                               <g:InlineLabel styleName="{style.star}" ui:field="fourStar"></g:InlineLabel>
                               <g:InlineLabel styleName="{style.star}" ui:field="fiveStar"></g:InlineLabel>
                                <g:InlineLabel ui:field="averageStarRating"></g:InlineLabel>
                            </div>
                        </div> -->
                    </div>
                       <button class="secondary {style.userRatingPreviewBtn}">Preview Resource</button>
					<g:HTMLPanel styleName="{style.userRating}" ui:field="userRatingContainer">
					   <g:Label styleName="{style.rateMsg}" ui:field="rateMsg">Do you want to rate this resource?</g:Label>
					   <g:Button styleName="secondary {style.floatRight}" ui:field="rateResourceBtn">Preview and Rate Resource</g:Button>
					</g:HTMLPanel>
                    <g:HTMLPanel ui:field="reviewsContainer">
                    </g:HTMLPanel>
                </div>
            </div>
        </g:HTMLPanel>
</ui:UiBinder>