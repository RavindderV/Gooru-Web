<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:gg="urn:import:org.ednovo.gooru.client.uc">
	<ui:style>
		.imageMainContainer{
			float: left;
			width: 131px;
			height: 131px;
		}
		
		.imageContainer{
			float: left;
			width: 131px;
			height: 131px;
		}
		
		.imageContainer:hover{
			float: left;
			/*width: 121px;
			height: 121px;
			margin: 5px;*/
			background:#ddd;
			cursor: pointer;
		}
		.imageContainerActive{
			float: left;
			/*width: 121px;
			height: 121px;
			margin: 5px;*/
			background:#ddd;
			moz-box-shadow: inset 0 0 10px rgba(0,0,0,.3);
			-webkit-box-shadow: inset 0 0 10px rgba(0,0,0,.3);
			box-shadow: inset 0 0 10px rgba(0,0,0,.3);
			cursor: pointer;
		}
		.chooseImage{
			float: left;
			width: 111px;
			height: 111px;
			margin: 5px;
			/*background-color:#515151;*/
		}
		.imageHolder{
			float: left;
			width: 111px;
			height: 111px;
			margin: 5px;
			background-color:#515151;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.imageMainContainer}">
		<g:FlowPanel styleName="{style.imageContainer}" ui:field="profileGooruDefaultImage">
			<g:FlowPanel styleName="{style.chooseImage}">
				<g:Image styleName="{style.imageHolder}" ui:field="gooruDefaultImage"></g:Image>
		    </g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 