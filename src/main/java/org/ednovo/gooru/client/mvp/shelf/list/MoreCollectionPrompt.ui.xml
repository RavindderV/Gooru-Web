<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:gg="urn:import:org.ednovo.gooru.client.uc">
	<ui:style>
		.promptMessage,.promptMessageTip {
			margin: 15px;
		}
		
		.promptBoldMessage {
			font-weight: bold;
			margin-right: 5px;
			float: left;
		}
		
		.promptButtons {
			margin: 0 auto;
			text-align: center;
		}
		
		.promptImage {
			height: 50px;
		}
	</ui:style>
	<g:FlowPanel>
		<g:Label styleName="{style.promptMessage}">It looks like there are a lot of resources in this collection!</g:Label>
		<g:FlowPanel styleName="{style.promptImage}"></g:FlowPanel>
		<g:FlowPanel styleName="{style.promptMessageTip}">
			<g:Label styleName="{style.promptBoldMessage}">Tip: </g:Label>
			<g:Label>Try separating your collection into two</g:Label>
		</g:FlowPanel>
		<g:FlowPanel styleName="{style.promptButtons}">
			<gg:BlueButtonUc text="ok" ui:field="okButton" styleName="overRideBlueButton"></gg:BlueButtonUc>
			<g:Anchor ui:field="cancelButton" text="Cancel" styleName="collectionFormCancelButton"></g:Anchor>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 