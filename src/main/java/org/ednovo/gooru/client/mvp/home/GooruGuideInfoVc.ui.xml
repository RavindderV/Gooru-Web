<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:com.anotherbigidea.flash.movie" xmlns:gg="urn:import:org.ednovo.gooru.client.uc">
	<ui:with type="org.ednovo.gooru.client.GooruCBundle" field="res" />
	<g:HTMLPanel styleName="{res.css.gooruGuideCont}">
		<g:Label styleName="{res.css.guideInfoArrow}"/>
	   <p class="{res.css.guideInfoText}">Use the Gooru Guide to help navigate the site when you get stuck.</p>
	   <g:FlowPanel styleName="{res.css.gooruGuideButton}">
	   		<gg:BlueButtonUc styleName="{res.css.guideButton}" ui:field="guideSlideHomeBtnUc" text="Got it!"/>
	   	</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 