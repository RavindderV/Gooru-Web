<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:panel="urn:import:org.ednovo.gooru.client.ui">
	<ui:style field= "footerstyle" src="footerstyle.css"/>
	<ui:with type="org.ednovo.gooru.client.uc.PlayerBundle" field="palyerBundle" />
	<ui:with type="org.ednovo.gooru.client.mvp.play.resource.style.PlayerStyleBundle" field="palyerStyleResource" />
	<g:FlowPanel styleName="{footerstyle.footerContainer}" ui:field="footerContainer">
		<g:FlowPanel styleName="{palyerStyleResource.getPlayerStyleResource.container} {palyerStyleResource.getPlayerStyleResource.animationWrapper}" ui:field="resourceAnimationContainer"></g:FlowPanel>
		<g:HTMLPanel styleName="{palyerStyleResource.getPlayerStyleResource.container} {palyerStyleResource.getPlayerStyleResource.tabButtonsContainer}">
			<div class="{palyerStyleResource.getPlayerStyleResource.navigationWrapper}">
				<g:Anchor styleName="{footerstyle.infoactive}"></g:Anchor>  
				<g:Anchor styleName="{footerstyle.narration}"></g:Anchor>
			</div>
			<div class="{palyerStyleResource.getPlayerStyleResource.navigationWrapper} {footerstyle.text-right}">
				<g:Anchor styleName="{footerstyle.add}"></g:Anchor>  
				<g:Anchor styleName="{footerstyle.share}"></g:Anchor> 
				<g:Anchor styleName="{footerstyle.flag}"></g:Anchor>
			</div>
		</g:HTMLPanel>
	</g:FlowPanel>
</ui:UiBinder>