<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style field="style" src="unitsetup.css" />
	<g:HTMLPanel styleName="{style.classMenuBlock} pathwayContainer">
		<g:HTMLPanel styleName="{style.classSetupMenu} {style.HoverSetup}">
			<g:HTMLPanel styleName="{style.classLeftMenu}">
				<g:HTMLPanel styleName="{style.numaricName}">
					<g:Label styleName="{style.blueNumaric}" ui:field="lblUnitNumber"></g:Label>
					<g:Label styleName="{style.unitName}" ui:field="lblUnitName"></g:Label>
				</g:HTMLPanel>
				<g:HTMLPanel styleName="{style.detailsBtn}">
					<g:Anchor>Details</g:Anchor>
				</g:HTMLPanel>
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="assignmentsContainer" styleName="{style.classDetailsMain}">
				<g:HTMLPanel styleName="{style.nextArrow}">
					<g:Image url="images/rightSmallarrow.png"></g:Image>
				</g:HTMLPanel>
			</g:HTMLPanel>

			<g:HTMLPanel styleName="{style.classButtons}">
				<g:Button styleName="secondary btn-block {style.editbutton}" ui:field="editUnitButton">Edit</g:Button>
			</g:HTMLPanel>
			
			<g:HTMLPanel styleName="{style.classButtons}">
				<g:Button styleName="secondary btn-block" ui:field="addAssignmentButton">Assignment</g:Button>
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{style.classButtons}">
				<g:Button styleName="secondary btn-block" ui:field="cancelEditButton">Cancel</g:Button>
			</g:HTMLPanel>
			
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder>