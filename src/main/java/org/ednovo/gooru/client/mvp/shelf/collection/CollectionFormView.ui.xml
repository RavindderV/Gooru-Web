<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:uc="urn:import:org.ednovo.gooru.client.uc"
	xmlns:gt="urn:import:com.tractionsoftware.gwt.user.client.ui" xmlns:panel="urn:import:org.ednovo.gooru.client.ui">
	<ui:style>
		.sourceToolTip {
			position: absolute;
			width: 212px;
			left: 129px;
			margin-top: 19px;
			height: 200px !important;
		}
		.clearStyle{
	        clear: both;
          }
	
	
	</ui:style>
	<ui:with
		type="org.ednovo.gooru.client.mvp.shelf.collection.CollectionCBundle"
		field="res" />
	<g:FlowPanel styleName="{res.css.shelfItemContentDiv}">
		<g:FlowPanel styleName="{res.css.shelfItemContentInnerDiv}">
		    <g:Label ui:field="lblDontWorry" styleName="{res.css.dontWorrkText}"></g:Label>
			<g:HorizontalPanel styleName="{res.css.contentAlign}">
				<g:Label width="100px" ui:field="lblTitle"/>
				<g:FlowPanel styleName="{res.css.newColletionOR}">
					<uc:TextBoxWithPlaceholder ui:field="collectionTitleTxtBox" />
					<g:Label ui:field="mandatoryErrorLbl"
						styleName="{res.css.mandatoryLabel}" />
				</g:FlowPanel>
				<g:Label styleName="{res.css.errorClass}" />
			</g:HorizontalPanel>
			<g:HorizontalPanel styleName="{res.css.contentAlign}">
				<g:Label width="100px" ui:field="lblGrade"/>

				<g:FlowPanel styleName="{res.css.newColletionOR}">
					<g:SimplePanel ui:field="collectionGradeTxtBox" />
				</g:FlowPanel>
				<g:Label styleName="{res.css.collectionHelpIcon}" ui:field="gradeHelpIcon" visible="false"></g:Label>
				<panel:HTMLEventPanel ui:field="gradeToolTip" visible="false" styleName="{style.sourceToolTip}"/>
			</g:HorizontalPanel>
			<g:HorizontalPanel styleName="{res.css.contentAlign}">
				<g:Label width="100px" ui:field="lblCourse"/>
				<g:SimplePanel ui:field="groupSimPanel" />
				<g:Label styleName="{res.css.collectionHelpIcon}" ui:field="courseHelpIcon" visible="false"></g:Label>
				<panel:HTMLEventPanel ui:field="courseToolTip" visible="false" styleName="{style.sourceToolTip}"/>
			</g:HorizontalPanel>
			<g:FlowPanel styleName="{res.css.contentAlign} {res.css.actionField}"
				ui:field="buttonFloPanel">
				<g:FlowPanel styleName="{res.css.validationErrorContainer}"
					ui:field="validationErrorFloPanel">
					<g:Label ui:field="validationErrorLbl"
						styleName="{res.css.errorValidation}" />
				</g:FlowPanel>
				<g:Label ui:field="lblVisibility" />
				<panel:HTMLEventPanel ui:field="publicShareFloPanel" styleName="{res.css.showShareInnerDiv}">
					<g:HTMLPanel ui:field="publicRadioButtonPanel"
						styleName="{res.css.radioButtonPanel}" />

					<g:Label styleName="{res.css.publicImage}" ui:field="publicLbl" />
					<g:Label ui:field="lblPublic" styleName="{res.css.publicText}" />
					<g:Label styleName="{res.css.visibilityText}"
						ui:field="lblAllow"></g:Label>
				</panel:HTMLEventPanel>

				<g:FlowPanel ui:field="linkShareFloPanel" styleName="{res.css.showShareInnerDiv}">

					<g:HTMLPanel ui:field="shareRadioButtonPanel"
						styleName="{res.css.radioButtonPanel}" />
					<g:Label styleName="{res.css.linkImage}" />
					<g:Label ui:field="lblShareable" styleName="{res.css.publicText}"></g:Label>
					<g:Label styleName="{res.css.visibilityText}"
						ui:field="lblShareableDesc"></g:Label>
				</g:FlowPanel>
				<g:FlowPanel ui:field="privateShareFloPanel" styleName="{res.css.showShareInnerDiv}">
					<g:HTMLPanel ui:field="privateRadioButtonPanel"
						styleName="{res.css.radioButtonPanel}" />

					<g:Label styleName="{res.css.privateImage}" />
					<g:Label ui:field="lblPrivate" styleName="{res.css.publicText}" />
					<g:Label styleName="{res.css.visibilityText}" ui:field="lblPrivateDesc"></g:Label>

				</g:FlowPanel>
				<g:HTMLPanel styleName="{style.clearStyle}"></g:HTMLPanel>
				<!-- <g:HTMLPanel styleName="{res.css.mobileSupportImagePanel}" />
				    <g:HTMLPanel styleName="{res.css.classPageEmailCheckBoxBg}" >
					   <g:Label styleName="{res.css.classPageEmailCheckBoxBgHoverSprite}" ui:field="checkMobileSupport"/>
					</g:HTMLPanel>
					<g:Label styleName="{res.css.mobileSupportPanel}" ui:field="mobileTxtLbl">I want to use this collection on an iPad</g:Label>
					<g:Image styleName="{res.css.questionMark}" ui:field="imgQuestionImage" url="images/mos/questionmark.png"></g:Image>-->
			</g:FlowPanel> 
			
			<g:HTMLPanel styleName="{res.css.formViewButtonContainer}" ui:field="buttonMainContainer">
				<uc:BlueButtonUc ui:field="btnOk" styleName="overRideBlueButton" />
				<g:Anchor ui:field="cancelAnr" styleName="collectionFormCancelButton" /></g:HTMLPanel>
				<g:Label styleName="{res.css.formViewButtonContainer}" ui:field="loadingTextLbl" text="adding..."></g:Label>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 