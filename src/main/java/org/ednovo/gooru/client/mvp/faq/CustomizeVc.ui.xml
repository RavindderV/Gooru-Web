<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.discoverHeaderText{
			 float: right;
			 padding: 10px;			
		}
		.discoverVideoText{
		    color: #4C98CC;
		    float: left;
		    margin-top: 6px;
		}
		.discoverVideoImage{
		    background: url("images/Collection-Search/icon-sprite.png") repeat scroll -4px -261px transparent;
		    float: left;
		    height: 27px;
		    width: 50px;
		    margin-left: 8px;
		}
		.discoverPanelText{
		   	font-size: 20px;
		    text-align: center;
 			padding: 2px;	
 			color: #515151;	    
		}
		.discoverPanel{
			 clear: both;
			 padding: 10px;
		}
		.footerTextContent{
		    height: 30px;
		    margin-left: 120px;
		    color:#4d9645;	
		    padding: 10px;		
		}
		.footerContexts{
			float: left;			
		}
		.footerContext{
			float:left;
		 	padding: 10px;			
		}
		.footerHighlight{
		   border: 1px solid #4d9645;
		    clear: both;
		    left: 10px;
		    position: relative;
		    top: -9px;
		    width: 50px;			
		}
		.organizeImageContainer{
		    background: url("images/faq/customizeGuide.png") repeat scroll 0 0 transparent;
		    height: 295px;
		    margin: 0 auto;
		    width: 596px;			 
		}
		.imageContainer{
			padding: 14px;
		}	
		.discoverHeaderText a{
			color:#1076BB !important;
		}
		.discoverHeaderText a:hover{
			color:#87BADD !important;
			text-decoration: none !important;
		}															
	</ui:style>
	<g:HTMLPanel>
		<g:FlowPanel styleName="{style.discoverHeaderText}">
			<g:Anchor target="_blank" styleName="{style.discoverVideoText}" ui:field="watchVideoText"/>
			<g:Anchor ui:field="watchVideoImage" target="_blank" styleName="{style.discoverVideoImage}"/>
		</g:FlowPanel>
		<g:FlowPanel styleName="{style.discoverPanel}">
			<g:Label styleName="{style.discoverPanelText}" ui:field="guideStudentsText"/>				
		</g:FlowPanel>		
		<g:FlowPanel styleName="{style.imageContainer}">
			<g:Label styleName="{style.organizeImageContainer}"/>	
		</g:FlowPanel>		
	</g:HTMLPanel>
</ui:UiBinder> 