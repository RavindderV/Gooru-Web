<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:ppanel="urn:import:org.ednovo.gooru.client.uc"
	xmlns:panel="urn:import:org.ednovo.gooru.client.ui" xmlns:uc="urn:import:org.ednovo.gooru.client.uc">
	<ui:with field="i18n"
		type="org.ednovo.gooru.application.shared.i18n.MessageProperties" />
	<g:HTMLPanel styleName="shareMainContainer">
		<div class="selectClassBlock">
			<p>Select classes that will use this course</p>
			<g:FlowPanel styleName="custom-select">
			    <g:ListBox ui:field="classListBox"></g:ListBox>
			    <g:Button styleName="primary" ui:field="assignCourseBtn" text="{i18n.GL0104}"></g:Button>
				<!-- <select>
					<option>The Number System</option>
					<option>Blue cheese with crackers</option>
					<option>Steak</option>
					<option>Other</option>
				</select> -->
			</g:FlowPanel>
            <g:Label ui:field="errorMsgLbl">Please select class</g:Label>
		</div>
		<div class="courseDetailsContainer no-gutter">

			<p>This course is found in</p>

			<g:HTMLPanel ui:field="classListPnl"></g:HTMLPanel>
			
			
		</div>

	</g:HTMLPanel>
</ui:UiBinder>