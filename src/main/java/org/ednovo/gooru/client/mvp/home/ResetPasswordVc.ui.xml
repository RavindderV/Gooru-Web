<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:gg="urn:import:org.ednovo.gooru.client.uc">
	<ui:with type="org.ednovo.gooru.client.mvp.home.HomeCBundle" field="res" />
	<g:FlowPanel styleName="{res.css.resetPwdContentDiv}">
		<g:Label styleName="{res.css.resetPwdTextContainer}" text="Please enter your new password below."/>
		<g:FlowPanel styleName="{res.css.resetPwdPanel}">
			<g:Label styleName="{res.css.resetPwdLabel}" text="New Password"/>
			<g:TextBox styleName="{res.css.resetPwdText}" ui:field="resetNewPwdTxtBox"/>
			<gg:ErrorLabelUc ui:field="newPwdValidationUc"/>
		</g:FlowPanel>
		<g:FlowPanel styleName="{res.css.resetPwdPanel}">
			<g:Label styleName="{res.css.resetPwdLabel}" text="Confirm Password"/>
			<g:TextBox styleName="{res.css.resetPwdText}" ui:field="resetConfirmPwdTxtBox"/>
			<gg:ErrorLabelUc ui:field="confirmPwdValidationUc"/>
		</g:FlowPanel>
		<g:FlowPanel styleName="{res.css.forgotPwdFormButtonDiv}">
			<gg:BlueButtonUc  text="Save" ui:field="sendMailBtnUc" />
			<g:Anchor ui:field="resetPwdCancelAnr" text="Cancel" styleName="{res.css.forgotPwdFormCancelButton}" />
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 