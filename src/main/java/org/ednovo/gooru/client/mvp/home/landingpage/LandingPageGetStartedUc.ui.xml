<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:panel="urn:import:org.ednovo.gooru.client.uc">
	<ui:style field="landingPageStyle" src="../landing-page.css" />
	<g:HTMLPanel styleName="{landingPageStyle.pageSection} {landingPageStyle.getStarted}">
		<h2>How to Get Started</h2>
		<g:Anchor ui:field="backto" href="#" styleName="{landingPageStyle.returnToTop}">back to the top</g:Anchor>
		<g:HTMLPanel styleName="{landingPageStyle.contentBlock}">
		   <panel:HTMLEventPanel styleName="{landingPageStyle.getStartedOption} {landingPageStyle.search}" ui:field="discoverLink">
		      <g:HTMLPanel styleName="{landingPageStyle.image}"></g:HTMLPanel>
		      <h3>Search</h3>
		      <g:HTMLPanel styleName="{landingPageStyle.description}">Begin by searching for collections or resources, and filter by grade, subject or teaching standard.</g:HTMLPanel>
		   </panel:HTMLEventPanel>
		   <panel:HTMLEventPanel styleName="{landingPageStyle.getStartedOption} {landingPageStyle.create}" ui:field="organizeLink">
		      <g:HTMLPanel styleName="{landingPageStyle.image}"></g:HTMLPanel>
		      <h3>Create</h3>
		      <g:HTMLPanel styleName="{landingPageStyle.description}">Start your own collection of resources on a particular subject, or personalize an existing collection for the way you like to teach.</g:HTMLPanel>
		   </panel:HTMLEventPanel>
		   <panel:HTMLEventPanel styleName="{landingPageStyle.getStartedOption} {landingPageStyle.signup}" ui:field="signUpLink">
		      <g:HTMLPanel styleName="{landingPageStyle.image}"></g:HTMLPanel>
		      <h3>Sign Up</h3>
		      <g:HTMLPanel styleName="{landingPageStyle.description}">Start saving, creating and sharing the cool resources and collections you find. Get started today!</g:HTMLPanel>
		   </panel:HTMLEventPanel>
		   <g:HTMLPanel styleName="{landingPageStyle.clearfix}"></g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>