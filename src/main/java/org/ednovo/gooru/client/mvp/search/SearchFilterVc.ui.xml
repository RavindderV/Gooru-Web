<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:uc="urn:import:org.ednovo.gooru.client.uc"
xmlns:panel="urn:import:org.ednovo.gooru.client.ui">
	<ui:style type="org.ednovo.gooru.client.mvp.search.SearchFilterVc.Style">
		.searchFilterVcContainer {
			float: left;
			clear: both;
			min-height: 450px;
			width: 160px;
			margin-right: 10px;
			overflow-x: hidden;
		}
		
		.active {
			border-bottom: 2px solid #4E9746 !important;
			font-weight: bold;
		}
		
		.titleText {
			padding-bottom: 2px;
			margin-top: 20px;
			border-bottom: 1px #DDD solid;
			font-size: 16px !important;
		}
		
		.notFound {
			clear: both;
			float: left;
			color: orange;
			display:none;
		}
		
		.clearAll {
			color: #4e9746;
			float: right;
			width: 50px;
			cursor: pointer;
			margin-top: 15px;
		}
		.clearAll:HOVER {
			color: #A6CAA2;
		}

		.helpIconBtn {
			position: absolute;
			right: 0;
			margin-top: -20px;
			margin-right: 10px;
			color: #0f76bb;
			cursor: pointer;
			font-size: 11px;
		}
		.sourceToolTip {
			position: absolute;
			margin-top: -10px;
			width: 140px;
		}
		
		.notifyLink {
			color: #4E9746;
			cursor: pointer;
			float: left;
			margin: 0 2px;
			padding-bottom: 2px;
		}
		.notifyLink:HOVER {
		    border-bottom: 2px solid #A6CAA2;
		    cursor: pointer;
		    padding-bottom: 2px;
		    color: #4E9746;
		    text-decoration:none;
		}
		.notifyLinks {
		    color: #4E9746 !important;
		    cursor: default;
		    float: left;
		    font-size: 15px;
		    font-weight: bold;
		    margin: -3px 5px 0 6px;
		}
		
		.PageNotify {
			margin: 17px auto 0;
			width: 596px;
			display: inline-block;
			vertical-align:top;
		}
		
		
	</ui:style>
	<g:FlowPanel styleName="{style.searchFilterVcContainer}" ui:field="myCollectionSearch">
		<g:FlowPanel>
			<g:Label text="Filters" styleName="{style.titleText}" />
		</g:FlowPanel>
		
		<g:FlowPanel styleName="{style.PageNotify}" ui:field="flowpanel">
			<g:HTMLPanel ui:field="contentpanel"></g:HTMLPanel>
			<g:Anchor text="Resources" styleName="{style.notifyLink}" ui:field="resourceLinkLbl" />
			<g:Label text="|" styleName="{style.notifyLinks}" />
			<g:Anchor text="Collections" styleName="{style.notifyLink}" ui:field="collectionLinkLbl" />
		</g:FlowPanel>
		
		<g:HTMLPanel ui:field="panelNotMobileFriendly"></g:HTMLPanel>
		
		<uc:DisclosurePanelUc headerTitle="Category" ui:field="categoryPanelUc" />
		
		
		<uc:DisclosurePanelUc headerTitle="Source" ui:field="sourcePanelUc" visible="false">
			<uc:add>
				<uc:AppSuggestBox ui:field="sourceSgstBox" width="130px" />
			</uc:add>
			<uc:add>
			 	<g:Label text="?" styleName="{style.helpIconBtn}" ui:field="sourceHelpicon" visible="false"/>
			</uc:add>
			<uc:add>
			 	<panel:HTMLEventPanel ui:field="sourceToolTip" visible="false" styleName="{style.sourceToolTip}"/>
			</uc:add>
			<uc:add>
				<g:Label styleName="{style.notFound}" ui:field="sourcesNotFoundLbl" text="no match found" />
			</uc:add>
			<uc:add>
				<g:FlowPanel ui:field="sourceContainerFloPanel" />
			</uc:add>
		</uc:DisclosurePanelUc>
		
		
		<uc:DisclosurePanelUc headerTitle="Author" ui:field="authorPanelUc" visible="false">
			<uc:add>
				<g:TextBox ui:field="authorTxtBox" width="130px" />
			</uc:add>
			<uc:add>
				<g:FlowPanel ui:field="authorContainerFloPanel" />
			</uc:add>
		</uc:DisclosurePanelUc>
		
		
		<uc:DisclosurePanelUc headerTitle="Standard" ui:field="standardPanelUc">
			<uc:add>
				<uc:AppSuggestBox ui:field="standardSgstBox" width="130px" />
			</uc:add>
			<uc:add>
			 	<g:Label text="?" styleName="{style.helpIconBtn}" ui:field="standardHelpicon" visible="false"/>
			</uc:add>
			<uc:add>
			 	<panel:HTMLEventPanel ui:field="standardToolTip" visible="false" styleName="{style.sourceToolTip}"/>
			</uc:add>
			<uc:add>
				<g:Label styleName="{style.notFound}" ui:field="standardsNotFoundLbl" text="no match found" />
			</uc:add>
			<uc:add>
				<g:FlowPanel ui:field="standardContainerFloPanel" />
			</uc:add>
		</uc:DisclosurePanelUc>
		
		<uc:DisclosurePanelUc headerTitle="Subject" ui:field="subjectPanelUc" />
		
		<uc:DisclosurePanelUc headerTitle="Grade Level" ui:field="gradePanelUc" />
		
		<g:FlowPanel>
			<g:Label text="Clear All" styleName="{style.clearAll}" ui:field="clearAll" />
		</g:FlowPanel>
		
	</g:FlowPanel>
</ui:UiBinder> 