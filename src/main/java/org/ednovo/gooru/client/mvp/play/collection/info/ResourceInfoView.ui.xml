<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:header="urn:import:org.ednovo.gooru.client.mvp.play.collection.header">
	<ui:style field= "playerStyle" src="resourceinfo.css"/>
	<g:FlowPanel ui:field="resourceInfoContainerPanel" styleName="{playerStyle.resource-info-container}">
      <g:FlowPanel styleName="{playerStyle.resource-info-Wrapper}">
         <g:HTMLPanel styleName="{playerStyle.resource-info-metadata-wrapper}">
           <g:HTMLPanel styleName="{playerStyle.resource-info-type-image}">
          		<g:Label styleName="{playerStyle.resource-image}" ui:field="resourceTypeImage"/>
            	<g:Label styleName="{playerStyle.resource-info-title}" ui:field="resourceAttributon"> </g:Label>
           		<g:HTML ui:field="resourceInfoSeparator"/>
            	<g:HTMLPanel styleName="{playerStyle.resource-info-title}" ui:field="courseInfo"></g:HTMLPanel>
           </g:HTMLPanel>
            <g:HTMLPanel styleName="{playerStyle.resource-info-description}">
               <g:HTMLPanel  ui:field="resourceDescription"/>
            </g:HTMLPanel>
            <g:Label styleName="{playerStyle.resource-info-more-title}">More Information</g:Label>
            <g:FlowPanel styleName="{playerStyle.resource-info-more-left-wrapper}">
               <g:HTMLPanel styleName="{playerStyle.resource-info-more-leftinner-wrapper}">
                  <g:HTMLPanel styleName="{playerStyle.resource-info-grade-wrapper}">
                     <g:Label styleName="{playerStyle.resource-info-grade-icon}"></g:Label>
                     <g:HTMLPanel styleName="{playerStyle.resource-info-grade-content}">
                        <g:Label ui:field="staticGradeText" styleName="{playerStyle.resource-info-grade-text}"/>
                     </g:HTMLPanel>
                  </g:HTMLPanel>
                  <g:HTMLPanel styleName="{playerStyle.resource-info-rights-wrapper}">
                      <g:Label styleName="{playerStyle.resource-info-rights-icon}"></g:Label>
                      <g:HTMLPanel ui:field="rightsLogoContainer" styleName="{playerStyle.resource-info-rights-text}"></g:HTMLPanel>     
                  </g:HTMLPanel>
               </g:HTMLPanel>
            </g:FlowPanel>
            <g:FlowPanel styleName="{playerStyle.resource-info-more-right-wrapper}">
               <g:HTMLPanel styleName="{playerStyle.resource-info-view-content}">
                     <g:Label styleName="{playerStyle.resource-info-view-icon}"></g:Label>
                     <g:Label styleName="{playerStyle.resource-info-view-text}" ui:field="resourceViewsCount"></g:Label>
               </g:HTMLPanel>
                <g:HTMLPanel styleName="{playerStyle.resource-info-like-content}">
                     <g:Label styleName="{playerStyle.resource-info-like-icon}"></g:Label>
                     <g:Label styleName="{playerStyle.resource-info-like-text}" ui:field="resourceLikesCount"></g:Label>
               </g:HTMLPanel>
            </g:FlowPanel>
            <g:HTMLPanel styleName="{playerStyle.resource-info-stand-content}">
               <g:Label styleName="{playerStyle.resource-info-stand-text}">Standards</g:Label>
            </g:HTMLPanel>
     		 <g:FlowPanel ui:field="standardsInfoConatiner" styleName="{playerStyle.resource-info-stand-wrapper}"/>
  			 <g:HTMLPanel styleName="{playerStyle.resource-info-url-content}">
               <g:Label styleName="{playerStyle.resource-info-url-title}">Original URL</g:Label>
            </g:HTMLPanel>
            <g:HTMLPanel styleName="{playerStyle.resource-info-url-text}">
              <g:Label ui:field="resourceOriginalUrl"/>
            </g:HTMLPanel>
         </g:HTMLPanel>
         <g:HTMLPanel styleName="{playerStyle.resource-info-collections-wrapper}">
         	 <g:HTMLPanel styleName="{playerStyle.resource-info-collections-count}">Collections that have this resource &nbsp;</g:HTMLPanel>
         	 <g:Label styleName="{playerStyle.resource-info-collections-count}" ui:field="collectionsCount"></g:Label>
         	 <g:ScrollPanel ui:field="scrollPanel" styleName="{playerStyle.playerResourcesRightSection}">
             	<g:HTMLPanel ui:field="reosourceReleatedCollections"></g:HTMLPanel>
             </g:ScrollPanel>
          </g:HTMLPanel>
       </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>