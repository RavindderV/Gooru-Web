<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
   <ui:style field="addToCollectionStyle" src="addcollection.css" />
   <g:HTMLPanel styleName="{addToCollectionStyle.collectionPlayerAddResourcesContainer}" ui:field="addToCollectionWidgetContainer">
      <g:HTMLPanel styleName="{addToCollectionStyle.collectionPlayerAddResourcesContent}" ui:field="collectionAddImageContainer">
         	<g:HTMLPanel styleName="{addToCollectionStyle.collectionPlayerAddResourcesIconContainer}">
	            <g:HTMLPanel styleName="{addToCollectionStyle.collectionPlayerAddResourcesIconHolder}">
							<g:Label ui:field="successMessageAddedCollection"></g:Label>
			            <g:HTMLPanel ui:field="collImageUrlHolderPanel" styleName="{addToCollectionStyle.collectionPlayerAddResourcesIcon}">
			               <g:Image styleName="{addToCollectionStyle.collectionPlayerAddResourcesIcon}" ui:field="collImage" />
			            </g:HTMLPanel>
	            </g:HTMLPanel>
             	<div class="{addToCollectionStyle.collectionPlayerAddResourcesText}">Add this collection</div>
             </g:HTMLPanel>
             <g:HTMLPanel styleName="{addToCollectionStyle.addResourceInsteadContainer}" ui:field="addResourceInsteadLabelContainerInCollectionImage">
             	<g:Label  styleName="{addToCollectionStyle.collectionPlayerAddResourcesInstead}" ui:field="addResourceInsteadLabel">Add resource instead</g:Label>
         	 </g:HTMLPanel>
      </g:HTMLPanel>
       <g:FlowPanel styleName="{addToCollectionStyle.successMessageContainer}" ui:field="collectionAddedSuccessMessageContainer">
	    	<g:Label styleName="{addToCollectionStyle.successMessageLabelText}" ui:field="successMessageLabelText">This collection has been added!</g:Label> 
	    	<g:HTMLPanel styleName="{addToCollectionStyle.workSpaceLinkContainer}">
	    		<g:Anchor styleName="{addToCollectionStyle.workSpaceLinkText}" ui:field="workSpaceLink">View the collection in the Organize tab</g:Anchor>
	    	</g:HTMLPanel> 
	    	<g:HTMLPanel styleName="{addToCollectionStyle.addCollectionInsteadLabelContainer}" ui:field="addCollectionInsteadLabelContainer">
	    		
	    	</g:HTMLPanel>
	    	<g:HTMLPanel styleName="{addToCollectionStyle.horizontalLineStyle}"></g:HTMLPanel>     
     </g:FlowPanel>
      <g:HTMLPanel styleName="{addToCollectionStyle.collectionPlayerExistingCollectionContainer}">
         <div class="{addToCollectionStyle.collectionPlayerExistingCollectionContent}">
            <div class="{addToCollectionStyle.collectionPlayerExistingCollectionText}">Rename (optional)</div>
            <div class="{addToCollectionStyle.collectionPlayerExistingCollectionInputContainer}">
               <g:TextBox ui:field="collectionTitleInCoverPage" styleName="{addToCollectionStyle.inputTextBoxSyle}" />
            </div>
               <g:Button styleName="{addToCollectionStyle.collectionPlayerExistingAddButtonText}" ui:field="addToShelfCollectionButton">Add</g:Button>
            <g:Label ui:field="addingLabel"  styleName="{addToCollectionStyle.collectionAddingStyles}">Adding....</g:Label>
         </div>
            <g:Label ui:field="addErrorLabel" styleName="{addToCollectionStyle.collectionErrorStyles}"/>
      </g:HTMLPanel>
      <g:Label styleName="{addToCollectionStyle.addButtonHideLbl}" ui:field="addButtonHideLbl">Hide</g:Label>
   </g:HTMLPanel>
</ui:UiBinder>

