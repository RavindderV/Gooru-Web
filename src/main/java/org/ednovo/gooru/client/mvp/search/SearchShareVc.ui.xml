<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.shareShortenUrl {
			border: 1px solid #ddd;
		    color: #1076BB;
		    font-size: 12px;
		    height: 18px;
		    width: 95%;
		    margin: 5px 0px 0px 0px;
			padding: 6px 0px 6px 5px;
		}
		.shareShortenUrlContainer { 
			height: 52px;
			width: 713px;
			margin-left: 12px;
			padding-left: 3px;
			margin: 5px 10px;
			cursor: text;
		}
		.shareShortenUrlContainerInputContainer
		{
			float:left;
			width: 332px;
			
		}
		.shareSeparatorLine
		{
			float: left;
			width: 1px;
			height: 130px;
			background-color: #CCC;
			margin-left: 10px;
			margin-right: 10px;
		}
		.shareLineInSocialMediaPartContainer
		{
			float:left;
			width:130px;
			margin-left:20px;
		}
		.shareLineInSocialMediaText
		{
			float: left;
		    font-family: arial;
		    font-size: 12px;
		    color: #515151;
		}
		.shareSocialMediaIconContainer
		{
			float: left;
			width:107px;
		}
		.shareSocialMediaIcon
		{
			float:left;
			width:29px;
			height:28px;
			margin-right:13px;
		}
		.shareLineInSocialMedia{
	        width:154px;	        
	    }

		.embedContainer{
			float:left;
		}
		
	</ui:style>
	<g:FlowPanel styleName="{style.shareShortenUrlContainer}">
		<g:FlowPanel styleName="{style.shareLineInSocialMediaPartContainer}">
			<g:Label styleName="{style.shareLineInSocialMediaText}">Share this link via</g:Label>
			<g:HTMLPanel styleName="{style.shareLineInSocialMedia}" ui:field="socialContentPanel"/>
		</g:FlowPanel>
		<g:FlowPanel styleName="{style.shareSeparatorLine}"></g:FlowPanel>
		<!-- here social media icons will come -->
		<!-- <g:FlowPanel styleName="{style.shareShortenUrlContainerInputContainer}" ui:field="panelMain">
			<g:Label>Share this with others by copying and pasting these links</g:Label>
			<g:TextBox ui:field="shortenUrlTxtBox" readOnly="true" styleName="{style.shareShortenUrl}" />
		</g:FlowPanel>
		
		<g:FlowPanel styleName="{style.embedContainer}" ui:field="embedContainer" /> -->
		<g:FlowPanel ui:field="socialShareLinksViewContainer"></g:FlowPanel>
	</g:FlowPanel>	
</ui:UiBinder> 