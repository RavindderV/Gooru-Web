<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

	<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
 	<ui:style field="addToResourcesOrCollectionStyle" src="addresource.css" />
	<g:HTMLPanel styleName="{addToResourcesOrCollectionStyle.collectionPlayerAddResourcesContainer}" >
	<g:HTMLPanel styleName="{addToResourcesOrCollectionStyle.collectionPlayerAddResourcesContent}" ui:field="resourceImageContainerInAddResource">
    	<div class="{addToResourcesOrCollectionStyle.collectionPlayerAddResourcesIconContainer}">
        	<div class="{addToResourcesOrCollectionStyle.collectionPlayerAddResourcesIconHolder}">
	        	<g:HTMLPanel styleName="{addToResourcesOrCollectionStyle.collectionAddedToShelf}">
	        		<g:Label styleName="{addToResourcesOrCollectionStyle.collectionAddedToShelfText}" ui:field="successMessageAddedCollection">Added</g:Label>
	        	</g:HTMLPanel>
	            <g:HTMLPanel ui:field="resImageUrlHolderPanel" styleName="{addToResourcesOrCollectionStyle.collectionPlayerAddResourcesIcon}">
	            	<g:Label ui:field="resourceTypeSmallImage" styleName="{addToResourcesOrCollectionStyle.resourceTypeSmallImage}"></g:Label>
	                <g:Image ui:field="resourceImageWidget"  styleName="{addToResourcesOrCollectionStyle.collectionPlayerAddResourcesIcon}"/>
	            </g:HTMLPanel>
            </div>
            <div class="{addToResourcesOrCollectionStyle.collectionPlayerAddResourcesText}">Add this resource</div>
         </div>
         <g:HTMLPanel  styleName="{addToResourcesOrCollectionStyle.addCollectionContainer}" ui:field="addCollectionContainer">
	         <g:Label  styleName="{addToResourcesOrCollectionStyle.collectionPlayerAddResourcesCollectionInstead}" ui:field="addToExistingColl">
	        	Add collection instead
	         </g:Label>
         </g:HTMLPanel>
    </g:HTMLPanel>
    
    <g:FlowPanel styleName="{addToResourcesOrCollectionStyle.successMessageContainer}" ui:field="resourceAddedSuccessMessageContainer">
    	<g:Label styleName="{addToResourcesOrCollectionStyle.successMessageLabelText}" ui:field="successMessageLabelText">This resource has been added to your collection!</g:Label> 
    	<g:HTMLPanel styleName="{addToResourcesOrCollectionStyle.workSpaceLinkContainer}">
    		<g:Anchor styleName="{addToResourcesOrCollectionStyle.workSpaceLinkText}" ui:field="workSpaceLink">View the collection in the Organize tab</g:Anchor>
    	</g:HTMLPanel> 
    	<g:HTMLPanel styleName="{addToResourcesOrCollectionStyle.addCollectionInsteadLabelContainer}" ui:field="addCollectionInsteadLabelContainer">
    		<g:Label styleName="{addToResourcesOrCollectionStyle.addCollectionInsteadLabelText}" ui:field="addCollectionInsteadLabelText">Add collection instead</g:Label>
    	</g:HTMLPanel>
    	<g:HTMLPanel styleName="{addToResourcesOrCollectionStyle.horizontalLineStyle}"></g:HTMLPanel>     
    </g:FlowPanel>
    <div class="{addToResourcesOrCollectionStyle.collectionPlayerExistingCollectionContainer}">
    	<div class="{addToResourcesOrCollectionStyle.collectionPlayerExistingCollectionContent}">
        	<div class="{addToResourcesOrCollectionStyle.collectionPlayerExistingCollectionText}" >Add to an existing collection</div>      
            <div class="{addToResourcesOrCollectionStyle.collectionPlayerExistingCollectionInputContainer}">
            	<g:InlineLabel ui:field="dropdownListPlaceHolder" styleName="{addToResourcesOrCollectionStyle.dropdownListPlaceHolder}">Choose one of the following...</g:InlineLabel>
            	<g:ScrollPanel ui:field="dropdownListContainerScrollPanel" styleName="{addToResourcesOrCollectionStyle.dropdownListContainerScrollPanel}">
	            	<g:HTMLPanel ui:field="dropdownListContainer" styleName="{addToResourcesOrCollectionStyle.dropdownListContainer}">
			   		 </g:HTMLPanel>
		   		 </g:ScrollPanel>
            </div>
            	<g:Button styleName="{addToResourcesOrCollectionStyle.collectionPlayerExistingAddButtonText}" ui:field="addResourceToCollectionButton">Add</g:Button>
          <g:Label ui:field="addingLabel" styleName="{addToResourcesOrCollectionStyle.addingLabelText}">Adding....</g:Label>
           <g:Label ui:field="resourceAdditionErrorStyle" styleName="{addToResourcesOrCollectionStyle.resourceAdditionErrorStyle}">You've reached the limit of resources you can add to a collection! Tip: Try dividing this into two collections.</g:Label>
        </div>
        
        	<g:Label  styleName="{addToResourcesOrCollectionStyle.collectionPlayerNewColletionText}" ui:field="createCollectionButton">+New Collection</g:Label>
        	<g:Label ui:field="errorMessage" styleName="{addToResourcesOrCollectionStyle.errorLabelText}" > please choose one of the collection</g:Label>
            <g:Label ui:field="sizeMessage" styleName="{addToResourcesOrCollectionStyle.errorLabelText}" >you already reached max limit</g:Label>
    </div>
    <g:Label styleName="{addToResourcesOrCollectionStyle.addButtonHideLbl}" ui:field="addButtonHideLbl">Hide</g:Label> 
</g:HTMLPanel>
	
</ui:UiBinder> 