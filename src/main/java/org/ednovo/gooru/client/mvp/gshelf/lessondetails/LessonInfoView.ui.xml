<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"  xmlns:ppanel="urn:import:org.ednovo.gooru.client.uc" xmlns:panel="urn:import:org.ednovo.gooru.client.ui"
	xmlns:uc="urn:import:org.ednovo.gooru.client.uc">
	<ui:with field="i18n" type="org.ednovo.gooru.application.shared.i18n.MessageProperties" />
	<g:HTMLPanel ui:field="lessonInfo">
<div class="courseNameBlock">

<p>Lesson Name</p>
<p><g:TextBox styleName="form-control" ui:field="lessonTitle" />
<g:Label ui:field="lblErrorMessage" styleName="errorMessage text-right"></g:Label>
</p>


</div>
<div class="unitCoverBlock">

<div class="unitCoverHeader">

<div class="col-md-6 col-sm-6"><ppanel:PPanel text="{i18n.GL3320}"/></div>
<div class="dropDownRight">

	<div class="fractionDetailsTable">
				<div class="">
					<div class="no-gutter">
						<div class="col-md-4">
							<h3></h3>
						</div>
						<div class="col-md-12">
							<div class="dropDownRight">
								<div class="btn-group">
									<g:Button styleName="btn btn-primary" ui:field="taxonomyBtn">Select other from
										taxonomy</g:Button>
									<panel:HTMLEventPanel styleName="btn btn-primary dropdown-toggle" ui:field="taxonomyToggleBtn">
										<g:InlineLabel styleName="glyphicon gliphIconImage"></g:InlineLabel>
										<g:InlineLabel styleName="sr-only"></g:InlineLabel>
									</panel:HTMLEventPanel>
									<ul role="menu" class="dropdown-menu">
										<li>
											<a href="#">My Folders</a>
										</li>
										<li>
											<a href="#">My Collections</a>
										</li>

									</ul>
								</div>


								<panel:HTMLEventPanel styleName="btn-group"
									ui:field="btnStandardsBrowse">
									<g:Button styleName="btn btn-primary" text="{i18n.GL3209}"
										title="{i18n.GL3209}" />
									<g:HTMLPanel styleName="btn btn-primary dropdown-toggle">
										<g:InlineLabel styleName="caret"></g:InlineLabel>
										<g:InlineLabel styleName="sr-only"></g:InlineLabel>
									</g:HTMLPanel>
								</panel:HTMLEventPanel>

								<ppanel:UlPanel styleName="dropdown-menu"
									ui:field="standardsDropListValues"></ppanel:UlPanel>
							</div>
						</div>
					</div>

					<div class="clearfix"></div>

				</div>


				<div class="lessonCover">
					<div class="panel panel-default">
						<g:HTMLPanel ui:field="standardsUI" styleName="panel-body">






						</g:HTMLPanel>
					</div>







				</div>


			</div>







		</div>


<div class="filterTags">
<uc:UlPanel ui:field="ulSelectedItems"/>
</div>




</div>
</div>



<div class="stepsButtonGroup">

<g:Button styleName="secondary" ui:field="saveLessonBtn" text="{i18n.GL3366}"/>

<g:Button styleName="secondary" ui:field="btnSaveAndCreateCollection" text="Next: Create a Collection"/>
or
<g:Button styleName="secondary" ui:field="btnSaveAndCreateAssessment" text="Next: Create an Assessment"/>

</div>

<div class="clearfix"></div>






</g:HTMLPanel>
</ui:UiBinder>