<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:span="urn:import:org.ednovo.gooru.client.uc"
	xmlns:uc="urn:import:org.ednovo.gooru.client.ui">
	<ui:style src="" />
	<g:HTMLPanel styleName="rowContainer no-gutter">
	   <div class="col-md-3 col-sm-3">
	      <g:Label styleName="numaricOrder" ui:field="numericOrder"></g:Label>
		   <uc:HTMLEventPanel styleName="heighlightBlockUnitReports" ui:field="unitBlock">
		      <g:HTMLPanel styleName="lessonDetails">
	             <span:H3Panel ui:field="lessonCountName"></span:H3Panel>
	             <span:PPanel ui:field="lessonName"></span:PPanel>
		      </g:HTMLPanel>
		      <div class="progressBlockLeft">
	            <div class="green-circle"><span></span></div>
	         </div>
		   </uc:HTMLEventPanel>
	   </div>
	   <div class="col-md-8 col-sm-8 col-xs-8 statusScrollContainer">
	      <div class="statusScrollscrollInnerBlock no-gutter">
	         <uc:HTMLEventPanel styleName="scrollLeftArrow cursorArrows" ui:field="leftArrow"></uc:HTMLEventPanel>
	         <g:HTMLPanel ui:field="slnContentPanel"></g:HTMLPanel>
	         <div class="clearfix"></div>
	         <uc:HTMLEventPanel styleName="scrollRightArrow cursorArrows" ui:field="rightArrow"></uc:HTMLEventPanel>
	      </div>
	   </div>
	   <div class="col-md-1 col-sm-1 col-xs-12">
	      <div class="timeAndScore">
	         <div class="avgScore org">
	            <p>Avg Score</p>
	            <span:H2Panel ui:field="totalScore"></span:H2Panel>
	         </div>
	      </div>
	   </div>
	   <div class="clearfix"></div>
	</g:HTMLPanel>
</ui:UiBinder> 