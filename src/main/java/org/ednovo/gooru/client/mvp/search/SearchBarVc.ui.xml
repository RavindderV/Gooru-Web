<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
xmlns:uc="urn:import:org.ednovo.gooru.client.uc">
	<ui:style>
		.searchBoxContainer {
			margin: 0 auto;
			width: 599px;
			padding-top:50px;
		}
		
		.searchInputBox {
			border: 1px solid #DDDDDD;
			box-shadow: 0 0 6px rgba(0, 0, 0, 0.2);
			-webkit-box-shadow: 0 0 6px rgba(0, 0, 0, 0.1);
			-o-box-shadow: 0 0 6px rgba(0, 0, 0, 0.1);
			-khtml-box-shadow: 0 0 6px rgba(0, 0, 0, 0.1);
			-ms-box-shadow: 0 0 6px rgba(0, 0, 0, 0.1);
			-moz-box-shadow: 0 0 6px rgba(0, 0, 0, 0.1);
			border-radius: 0 0 0 0;
			-webkit-border-radius: 0 0 0 0;
			-moz-border-radius: 0 0 0 0;
			-ms-border-radius: 0 0 0 0;
			-khtml-border-radius: 0 0 0 0;
			-o-border-radius: 0 0 0 0;
			font-size: 14px;
			height: 32px;
			display:block;
			padding-left: 8px;
			float: left;
		}
		
		.searchPanel {
			margin: 0 auto;
			width: 786px;
		}
		
		.overRideBlueButton{
		    font-size: 14px;
		    font-weight: bold;
		    margin-left: 10px;
		    padding: 8px 9px !important;
		}
		.overRideBlueButton:HOVER{
			background: #1076BB;
			color: #ffffff !important;
			cursor: pointer;
			}
	</ui:style>
	<g:HTMLPanel styleName="{style.searchPanel}">
		<div class="{style.searchBoxContainer}">
		<uc:AppSuggestBox width="475px" ui:field="searchTxtBox" styleName="{style.searchInputBox}"/>
			<!-- <uc:TextBoxWithPlaceholder width="475px" ui:field="searchTxtBox" styleName="{style.searchInputBox}" placeholder="Discover your favorite Science, Math and Social Sciences topic..." />
		 -->	<g:Button ui:field="searchBtn" text="Search" styleName="primary {style.overRideBlueButton}"/>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 