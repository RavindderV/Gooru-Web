<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:panel="urn:import:org.ednovo.gooru.client.ui"
	xmlns:uc="urn:import:org.ednovo.gooru.client.uc">
	<ui:with field="i18n" type="org.ednovo.gooru.application.shared.i18n.MessageProperties" />
	<g:HTMLPanel ui:field="unitInfo">
			<div id="unitinfo">

<div class="courseNameBlock">

<p>Unit Name</p>
<p>
<g:TextBox styleName="form-control" ui:field="unitTitle" text="{i18n.GL3364}" title="{i18n.GL3364}"/>
<g:Label ui:field="lblErrorMessage"></g:Label>
</p>


</div>



<div class="questionsBlock">

<div class="col-md-6 col-sm-6 questionsBlockTextArea">
<p>Big Idea</p>
<p>
<g:TextArea styleName="form-control" ui:field="txaBigIdeas" />
<g:Label ui:field="lblErrorMessageForBig"></g:Label>
</p>

</div>
<div class="col-md-6 col-sm-6 questionsBlockTextArea">
<p>Essential Questions</p>
<p><g:TextArea styleName="form-control" ui:field="txaEssentialQuestions" />
<g:Label ui:field="lblErrorMessageForEssential"></g:Label>
</p>

</div>

<div class="clearfix"></div>


</div>






<div class="unitCoverBlock">

<div class="unitCoverHeader">

<div class="col-md-6 col-sm-6 col-xs-6 questionsBlockTextArea"> <p>What will this unit cover?</p></div>
<div class="col-md-6 col-sm-6 col-xs-6 questionsBlockTextArea">
<div class="dropDownRight">
<div class="btn-group">
  <g:Button styleName="btn btn-primary" ui:field="taxonomyBtn">My Courses</g:Button>
  <g:Button ui:field="taxonomyToggleBtn"  styleName="btn btn-primary dropdown-toggle">
    <span class="caret"></span>
    <span class="sr-only">Toggle Dropdown</span>
  </g:Button>
  <!-- <ul role="menu" class="dropdown-menu pull-right">
    <li><a href="#">This will be replaced with popup</a></li>
  </ul> -->
</div>
</div>


 </div>

<div class="clearfix"></div>
</div>



<div class="unitCoverBody">
<div class="unitCoverList no-gutter">
	<div class="col-md-3 col-sm-3">
		<div class="unitCoverListLeft containerHeight">

		<uc:UlPanel ui:field="ulMainGradePanel"/>
		</div>
	</div>
	<g:ScrollPanel ui:field="scrollCoursediv" styleName="col-md-4 col-sm-4 scrollCourseContainer">
	<g:HTMLPanel ui:field="pnlGradeContainer"/></g:ScrollPanel>
	<div class="col-md-5 col-sm-5 pnlGradeDescription">
		<g:HTMLPanel ui:field="pnlGradeDescContainer" styleName="pnlGradeDescInnerContainer"/>
	</div>
<div class="clearfix"></div>
</div>
</div>


</div>
<div class="tagCoursePanelFooter">
	<div class="filterTags">
		<uc:UlPanel ui:field="ulSelectedItems"/>
	</div>
</div>

<div class="stepsButtonGroup">
	<g:Button styleName="secondary" ui:field="saveUnitBtn" text="{i18n.GL3362}"/>
			<g:Button styleName="primary" ui:field="nextCreateLessonBtn" text="{i18n.GL3363}"/>

</div>

<div class="clearfix"></div>





</div>
</g:HTMLPanel>
</ui:UiBinder>