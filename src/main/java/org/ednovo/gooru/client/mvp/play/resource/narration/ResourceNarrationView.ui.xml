<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:header="urn:import:org.ednovo.gooru.client.mvp.play.collection.header">
	<ui:style field= "playerStyle" src="resourcenarration.css"/>
	<g:FlowPanel styleName="{playerStyle.collection-narration-container}">
		<g:FlowPanel styleName="{playerStyle.collection-narration-wrapper}">
			 <g:FlowPanel styleName="{playerStyle.collection-narration-thumbnailcontainer}">
				<g:FlowPanel styleName="{playerStyle.collection-narration-thumbnail}">
					<g:Image styleName="{playerStyle.collection-narration-thumbnailimage}" ui:field="authorThumbnailImage"/>
				</g:FlowPanel> 
				<g:Anchor styleName="{playerStyle.collection-narration-author}" ui:field="authorName"></g:Anchor>
			</g:FlowPanel>
			<g:FlowPanel styleName="{playerStyle.collection-narration-contentcontainer}">
				<g:HTMLPanel styleName="{playerStyle.collection-narration-content}" ui:field="narrationContent"></g:HTMLPanel>
			</g:FlowPanel>
			<g:FlowPanel styleName="{playerStyle.collection-narration-rollerimage}"></g:FlowPanel>
		</g:FlowPanel> 
	</g:FlowPanel>
</ui:UiBinder>