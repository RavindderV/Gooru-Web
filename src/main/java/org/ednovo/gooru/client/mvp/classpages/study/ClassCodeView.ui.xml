<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:twf="urn:import:org.ednovo.gooru.client.uc">

	<ui:style field="StudyStyle" src="StudyStyles.css" />

	<g:HTMLPanel styleName="{StudyStyle.classPageContainer}">
		<g:HTMLPanel styleName="{StudyStyle.classPageContentDiv}">
			<g:HTMLPanel styleName="{StudyStyle.classPageContentDesc}">Students, enter in the
				Class Code provided by your teacher.</g:HTMLPanel>
			<g:HTMLPanel styleName="{StudyStyle.classPageSearchContainer}">
				<g:HTMLPanel styleName="{StudyStyle.classPageSearchDesc}">Class Code</g:HTMLPanel>
				<g:HTMLPanel>
					<twf:TextBoxWithFocus styleName="{StudyStyle.classPageSearchInput}"
						ui:field="tbCode" />
				</g:HTMLPanel>
				<g:Button styleName="primary"
					ui:field="enterLbl">Enter</g:Button>
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{StudyStyle.clear}"></g:HTMLPanel>
			<g:Label styleName="{StudyStyle.classPageOrangeText}"
				ui:field="errorLbl" visible="false">Oops! We donâ€™t recognize that
				code. Try
				again and double check with your teacher for the correct code.</g:Label>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>