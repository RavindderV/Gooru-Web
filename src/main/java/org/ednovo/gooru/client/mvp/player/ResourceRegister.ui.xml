<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
 <ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:dt="urn:import:com.google.gwt.user.datepicker.client"  xmlns:gg="urn:import:org.ednovo.gooru.client.uc">
	<ui:with type="org.ednovo.gooru.client.mvp.home.register.RegisterCBundle" field="res" />
	
	<ui:style>
		.headerPopUpTitle{
		    background: none repeat scroll 0 0 #515151;
		    clear: both;
		    color: #FFFFFF;
		    display: block;
		    font-size: 17px;
		    padding-bottom: 7px;
		    padding-left: 11px;
		    padding-top: 8px;
		    width: auto;
		    box-shadow: 0px 0px 20px 0px #CCC;			
		}
		.sliderContainer{
		}
		.previousArrowContainer{
		}
		.slideContextContent{
		    min-height: 485px;
		    min-width: 750px;
		    float: left;
		    height: auto;
		    width: auto;
		    margin-bottom:50px;
		}
		.nextArrowContainer{
		}				
		.mainSliderContent{
			border: 1px solid #CCCCCC;
			height:598px;
		}
		.closePopUp{
		    background: url("images/Collection-Search/icon-sprite.png") repeat scroll -51px -435px transparent;
		    clear: both;
		    color: #FFFFFF;
		    cursor: pointer;
		    height: 20px;
		    position: absolute;
		    right: 20px;
		    top: 11px;
		    width: 20px;
		}
		.closePopUp:HOVER{
			 background: url(images/Collection-Search/icon-sprite.png) repeat scroll -51px -435px transparent;
		}
		.popUpTitleContext{
			text-align: center;
		}
		.guideInfoImage{
		    background: url("images/GooruGuideIcon.png") no-repeat scroll 0 0 transparent;
		    float: left;
		    height: 26px;
		    left: 235px;
		    position: absolute;
		    top: 9px;
		    width: 26px;	
		}
		.footerTextContent{
		    height: 30px;
			width: 400px;
			margin: 0 auto;
		    color:#4d9645;
		}
		.footerContext{		    
		    float: left;
		    margin-left: 10px;
		    cursor: pointer;
		}
		.footerSeperator{
		    float: left;
		    padding-left: 8px;
		}	

	</ui:style>
	<g:FlowPanel styleName="{style.mainSliderContent}">
	
	
	
	    <g:FlowPanel  styleName="{res.css.registersaveAndSharePopupTotalContainerNew}"> 
				<g:FlowPanel ui:field="headerPanel" styleName="{res.css.registerHeaderDiv}">
					<g:Label text="Sign up for Gooru" styleName="{res.css.registerHeaderText}"/>
				</g:FlowPanel>	
			<g:FlowPanel styleName="{res.css.registerSaveAndShareContentDiv}">
		
  
  
 
					<g:FlowPanel styleName="{res.css.registerInnerContainer}">
						<g:FlowPanel styleName="{res.css.registerSaveAndShareText}"/>
							<g:Label styleName="{res.css.registerSaveAndShareHeaderTitle}" text="Want to save and share resources and collections?"/>
						<g:Label text = "Get an account today and let Gooru work for you!" styleName="{res.css.registerTextAlign2}"/>
						
					
				
					<g:FlowPanel styleName="{res.css.registerContentAlign}">
						<g:Label text = "Birthdate" styleName="{res.css.registerSaveAndShareAlignInputs}"/>
						<g:SimplePanel ui:field = "dateSimPanel"/>
						<gg:ErrorLabelUc ui:field="dateValidationUc"/>
					</g:FlowPanel>
					
					<g:FlowPanel styleName="{res.css.registerContentAlign}">
						<g:Label text = "Email" styleName="{res.css.registerSaveAndShareAlignInputs}"/>
						<g:TextBox ui:field="emailIdTxtBox" styleName="{res.css.emailTxtBox}"/>
						<gg:ErrorLabelUc ui:field="emailValidationUc"/>
					</g:FlowPanel>
					
					<g:FlowPanel styleName="{res.css.resourceRegisterAlign}" ui:field="buttonContainer">
							<gg:BlueButtonUc text="Sign me up!" ui:field="goBtnUc" styleName="{res.css.overResourceRideBlueButton}"/>
							<g:Anchor text="Maybe later" ui:field="cancelAnr" styleName="{res.css.collectionFormCancelButton}"/>
						</g:FlowPanel>
						
						
						<g:FlowPanel styleName="{res.css.resourceRegisterAlign}" ui:field="loginContainer">
						
						</g:FlowPanel>
						<g:Anchor text="I already have an account." ui:field="iHaveAcc" styleName="{res.css.saveAndShareHaveAnAccountTwo}"/>
		</g:FlowPanel>
					
					
			</g:FlowPanel>
		 
		  </g:FlowPanel> 
	 
	</g:FlowPanel>
</ui:UiBinder> 