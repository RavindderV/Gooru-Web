<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style field= "oeStyle" src="questionresource.css" type="org.ednovo.gooru.client.mvp.play.resource.question.QuestionStyleResource"/>
	<g:FlowPanel styleName="{oeStyle.openEndedQuestionTotalContainer}" ui:field="questionContainer">
     	<g:FlowPanel styleName="{oeStyle.openEndedQuestionContainer}">
	         <g:HTMLPanel styleName="{oeStyle.openendedQuestionTitle}">Question</g:HTMLPanel>
	         <g:HTMLPanel styleName="{oeStyle.openEndedQuestionFull}" ui:field="openEndedQuestionText">
	         </g:HTMLPanel>
	         <g:HTMLPanel styleName="{oeStyle.openEndedQuestionImageContainer}">
	         	<g:Image  styleName="{oeStyle.openEndedQuestionImage}" ui:field="openEndedQuestionImage"/>
	         </g:HTMLPanel>
	         <g:Button styleName="{oeStyle.hintsActiveButton}" ui:field="hintsButton">Hints (0 Left)</g:Button>
	         <g:Button styleName="{oeStyle.hintsActiveButton}" ui:field="explanaionButton">Explanation</g:Button>
	         <g:FlowPanel styleName="{oeStyle.hintsHoldingContainer}" ui:field="hintsContainer">
	         </g:FlowPanel>
	         <g:FlowPanel>
	         	 <g:HTMLPanel styleName="{oeStyle.explanationText}"  ui:field="explanationContainer"></g:HTMLPanel>
	         </g:FlowPanel>
         </g:FlowPanel>
         <!-- answer -->
      	<g:FlowPanel  ui:field="answerOptionsContainer">
          	
        </g:FlowPanel>
         <!-- end of answers -->
     </g:FlowPanel>
</ui:UiBinder>