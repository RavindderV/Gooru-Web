<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.title{
			background: none repeat scroll 0 0 #515151;
			border-radius: 4px 4px 0 0;
			color: #FFFFFF;
			height: 30px;
			padding-left: 5px;
			padding-top: 10px;
			text-align: left;
		}
		.content{
			min-height: 102px;
			border: 1px solid #c1bfbf;
			padding: 10px;
			background-color: white;
		}
		.contentStyle{
			width: 98%;		
			word-wrap: break-word;
		}
		.okButton{
			margin: 5px auto;
    		text-align: center;
    		width: 100%;
    		margin-top: 39px;
    		 
    		 
		}
		
		
			.alterOkButtonBlue
		{
	
	    padding: 7px 0px;
	    font-family: arial;
	    font-size: 12px;
	    background-color: #1076bb;
	    width: 45px;
	    margin: 0 auto;
	    border-radius: 4px;
	    color: #FFF;
	    background: -webkit-gradient(linear, 0 0, 0 100%, from(#4c98cc), to(#1076bb));
	    cursor: pointer;
	    border:0px;
	

		}
	</ui:style>
	<g:FlowPanel>
		<g:FlowPanel ui:field="headerPanel" styleName="{style.title}">
			<g:Label ui:field="alertMessageHeaderField"/>	
		</g:FlowPanel>
		<g:FlowPanel ui:field="contentPanel" styleName="{style.content}">
			<g:Label styleName="{style.contentStyle}" ui:field="alertMessageField"/>
		<g:FlowPanel styleName="{style.okButton}">
			<g:Button ui:field="okButton" styleName="{style.alterOkButtonBlue}"/>
		</g:FlowPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 