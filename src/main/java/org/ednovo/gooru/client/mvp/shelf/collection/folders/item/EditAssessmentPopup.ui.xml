<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:uc="urn:import:org.ednovo.gooru.client.uc">
	<ui:with field="i18n" type="org.ednovo.gooru.shared.i18n.MessageProperties"/>
	<ui:style>
	.popupWrapper {
		bottom: 0;
		left: 0;
		outline: 0 none;
		overflow-x: hidden;
		position: fixed;
		right: 0;
		top: 0;
		z-index: 1050;
		background: rgba(0,0,0,0.5);
	}
	.PopupMainVSmall {
		width: 550px;
		color: #515151;
		margin: 30px auto;
		position: relative;
		font-family: arial;
		font-size: 12px;
		background: #ffffff;
		border-radius: 0 0;
		border: 1px solid #999;
		padding: 3px 3px;
	}
	.popupInnerGrey {
		border: 1px solid #ddd;
		position: relative;
	}
	.popupgreyHeader {
		padding: 10px 15px;
		color: white;
		background: -webkit-linear-gradient(top, #666, #515151);
		background: -moz-linear-gradient(top, #666, #515151);
		background: -ms-linear-gradient(top, #666, #515151);
		background: -o-linear-gradient(top, #666, #515151);
		background-color: #515151;
		font-size: 16px;
		filter: progid;
	}
	.shareSelection {
		margin: 10px 35px;
	}
	.logInput {
		margin: 20px 0 10px 0;
	}
	.formViewButtonContainer {
		padding-bottom: 20px;
		padding-top: 10px;
		text-align: center;
	}
	.form_control {
		display: block;
		width: 100%;
		height: 34px;
		padding: 6px 12px;
		font-size: 14px;
		line-height: 1.42857143;
		color: #555;
		background-color: #fff;
		background-image: none;
		border: 1px solid #ccc;
		border-radius: 4px;
		-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
		box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
		-webkit-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
		transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
	}
	.logInput .form_control {
		margin-bottom: 6px;
		border-radius: 0 0;
	}
	.mandatoryLabel{
		font-family: Arial, Helvetica, sans-serif;
		font-size: 12px;
		line-height: 100%;
		color: #fab03a;
		text-align: right;
		position: relative;
		margin-right: 12px;
		margin-bottom: 5px;
		clear: both;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.popupWrapper}">
		<div class="{style.PopupMainVSmall}">
			<div class="{style.popupInnerGrey}">
						<div class="{style.popupgreyHeader}">
							<div class="row">
								<g:Label styleName="col-md-8 col-xs-8" text="{i18n.GL3167}" title="{i18n.GL3167}">Edit Assessment URL </g:Label> 
									<div class="clearfix"></div>
								</div>
							</div>
					   	<div class="{style.shareSelection}">
					 		<div class="{style.logInput}">
								<uc:TextBoxWithPlaceholder ui:field="txtExistingAssessmentTitle" styleName="{style.form_control}"></uc:TextBoxWithPlaceholder>
			 					<g:Label ui:field="lblExistingAssessmentError" styleName="{style.mandatoryLabel}" ></g:Label>
			 					<uc:TextBoxWithPlaceholder ui:field="txtExistingAssessmentURL" styleName="{style.form_control}"></uc:TextBoxWithPlaceholder>
			 					<g:Label ui:field="lblExistingAssessmentURLError" styleName="{style.mandatoryLabel}" ></g:Label>
			 				</div>
							<div class="formViewButtonContainer">
									 <g:Button ui:field="btnCancelAssessment" styleName="secondary" text="{i18n.GL0142}"></g:Button>
							 		 <g:Button ui:field="btnSaveAssessment" styleName="primary" text="{i18n.GL0141}"></g:Button>
							</div>
						</div>
	   		 </div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 