<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:header="urn:import:org.ednovo.gooru.client.mvp.play.collection.header"
	xmlns:uc="urn:import:org.ednovo.gooru.client.uc">
	<ui:style field="unitStyle" src="analytics.css" />
	<ui:with field="i18n" type="org.ednovo.gooru.shared.i18n.MessageProperties"/>
	<g:HTMLPanel styleName="{unitStyle.unitDetails}">
				<!-- load all collections start-->
				<g:HTMLPanel styleName="row {unitStyle.generalSet}">
				   <g:HTMLPanel>
				  	  <g:Label styleName="{unitStyle.narrowReportText}" text="{i18n.GL2257}"></g:Label>
				      <g:ListBox styleName="{unitStyle.filterDropDown}" ui:field="loadCollections">
				  	  </g:ListBox>
				   </g:HTMLPanel>
				</g:HTMLPanel>
				<g:Label styleName="{unitStyle.labelForClassReport}">Class Reports</g:Label> 
				<!-- load all collections end -->
				<div class="{unitStyle.reportDiv}">
					<div class="{unitStyle.reportsGeneration}">
						Collection Progress
						<span><img class="title-report-info" src="images/question.png" data-text="Analyze how your students did on the collection overall and view a more detailed report on student usage."/></span>
					</div>
					<div id="profile-class-gradebook-view-report">
						<g:HTMLPanel styleName="{unitStyle.viewSummaryText}"> <g:Button ui:field="btnCollectionProgress" styleName="primary" text="{i18n.GL2296}"></g:Button><g:Label ui:field="progressArrowlbl" styleName="{unitStyle.caretUp}"></g:Label> </g:HTMLPanel>
					</div>
				</div>
				<g:HTMLPanel ui:field="collectionProgressSlot" styleName="clearfix">	</g:HTMLPanel>
				<div class="{unitStyle.reportDiv}">
					<div class="{unitStyle.reportsGeneration}">
						Collection Summary
						<span><img class="title-report-info" src="images/question.png" data-text="Analyze how your students did on the collection overall and view a more detailed report on student usage."/></span>
					</div>
					<div id="profile-class-gradebook-view-report">
						 <g:HTMLPanel styleName="{unitStyle.viewSummaryText}"> <g:Button ui:field="btnCollectionSummary" styleName="primary" text="{i18n.GL2296}"></g:Button> <g:Label ui:field="summaryArrowlbl" styleName="{unitStyle.caretUp}"></g:Label>  </g:HTMLPanel>
					</div>
				</div>
				<g:HTMLPanel ui:field="collectionSummarySlot" styleName="clearfix">	</g:HTMLPanel>
				<div class="{unitStyle.reportDiv}">
					<div class="{unitStyle.reportsGeneration}">
						Open-Ended Responses
						<span><img class="title-report-info" src="images/question.png" data-text="Analyze how your students did on the collection overall and view a more detailed report on student usage."/></span>
					</div>
					<div id="profile-class-gradebook-view-report">
						  <g:HTMLPanel styleName="{unitStyle.viewSummaryText}"> <g:Button ui:field="btnCollectionResponses"  styleName="primary" text="{i18n.GL2258}"></g:Button> <g:Label ui:field="responsesArrowlbl" styleName="{unitStyle.caretUp}"></g:Label>  </g:HTMLPanel>
				   	</div>
				</div>
	</g:HTMLPanel>
</ui:UiBinder>