<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:a="urn:import:aj.org.objectweb.asm"
	xmlns:gt="urn:import:com.tractionsoftware.gwt.user.client.ui" xmlns:uc="urn:import:org.ednovo.gooru.client.uc"
	xmlns:dt="urn:import:com.google.gwt.user.datepicker.client">
	<ui:with
		type="org.ednovo.gooru.client.mvp.classpages.tabitem.assignments.collections.CollectionsCBundle"
		field="res" />
	<g:HTMLPanel>
		<g:HTMLPanel styleName="{res.css.myCollectionTitleDashedNoBorderContainerTwo}">
			<g:HTMLPanel styleName="{res.css.myCollectionInsightChapterContainerNoBorder}">
				<g:HTMLPanel styleName="{res.css.myCollectionInsightChapterBigImageContainer}">
					<g:HTMLPanel styleName="{res.css.myCollectionInsightChapterBigImage}">
						<g:Image title="Collection" altText="Collection" ui:field="collectionImage" styleName="{res.css.imageDim}"/>
						<g:FlowPanel styleName="{res.css.collectionHover}">
							<g:Label styleName="{res.css.playIcon}" />
						</g:FlowPanel>
					</g:HTMLPanel>
				</g:HTMLPanel>
				<g:HTMLPanel styleName="{res.css.myCollectionInsightChapterTitleContainer}">
					<g:HTMLPanel styleName="{res.css.myCollectionInsightChapterTitle}">
						<g:HTML text="Collection Title" ui:field="collectionTitle"></g:HTML>
					</g:HTMLPanel>
					<g:HTMLPanel styleName="{res.css.myCollectionInsightChapterSubTitleBlack}">
						<!-- <g:Label text="Collection Description" ui:field="collectionDesc"></g:Label> -->
						<g:HTML ui:field="collectionDesc" />
					</g:HTMLPanel>
				</g:HTMLPanel>
				<g:HTMLPanel styleName="{res.css.collectionHoverEditRemoveContainer}" ui:field="actionPanel">
					<g:Button styleName="primary" ui:field="editCollectionLbl">Edit</g:Button>
                    <g:Label styleName="{res.css.CollectionHoverEideRemove}" ui:field="removeCollectionLbl">Remove</g:Label>
                </g:HTMLPanel>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 